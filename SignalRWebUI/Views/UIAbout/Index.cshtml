@model List<ResultAboutDto>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">


    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <section class="about_section layout_padding bg-light">
        <div class="container  ">
            <div class="row">
                <div class="col-md-6 ">
                    <div class="img-box">
                        <img src="~/feane-1.0.0/images/about-img.png" alt="">
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-md-6">
                        <div class="detail-box text-dark">
                            <div class="heading_container text-dark">
                                <h2>
                                    @item.Title
                                </h2>
                            </div>
                            <p>
                                @item.Description
                            </p>
                            <a href="/Menu/Index/" class="text-dark">
                                Hemen Sipariş Verin..
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

</body>

</html>