@model List<ResultAboutDto>

@{
    ViewData["Title"] = "UIAbout";
    Layout = "~/Views/UILayout/Index.cshtml";
}



<section class="about_section layout_padding">
    <div class="container  ">
        <div class="row">
            <div class="col-md-6 ">
                <div class="img-box">
                    <img src="~/feane-1.0.0/images/about-img.png" alt="">
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h2>
                                @item.Title
                            </h2>
                        </div>
                        <p>
                            @item.Description
                        </p>
                        <a href="/Menu/Index/">
                            Hemen Sipariş Verin..
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>