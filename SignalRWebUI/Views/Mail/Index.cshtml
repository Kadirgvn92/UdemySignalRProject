@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" onsubmit="updateUser()">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ReceiverMail">Alıcı Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="ReceiverMail" id="ReceiverMail">
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="Subject">
                            </div>
                            <div class="form-group">
                                <label for="Body">Mesajınız</label>
                                <div id="editor" style="height: 300px;"></div>
                                <input type="hidden" id="Body" name="Body" asp-for="Body">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Mail Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script>
    var quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
            toolbar: [
                [{ header: [1, 2, false] }],
                ['bold', 'italic', 'underline', 'strike'],
                ['blockquote', 'code-block'],
                [{ color: [] }],
                [{ list: 'ordered' }, { list: 'bullet' }],
                ['link', 'image', 'video'],
                ['clean']
            ],
        },
    });
    quill.on('text-change', function () {
        document.getElementById('Body').value = quill.root.innerHTML;
    });
</script>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function updateUser() {
        var password = document.getElementById('Password').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;

        // Check if passwords match
        if (password === confirmPassword) {
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Şifreniz Güncellendi",
                showConfirmButton: false,
                timer: 1500
            });
        } else {
            // Show an error message if passwords don't match
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Şifreniz uyuşmuyor!",
                showConfirmButton: false,
                timer: 1500
            });
        }
    }
</script>
