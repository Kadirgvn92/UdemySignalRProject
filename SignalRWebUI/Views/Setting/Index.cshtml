@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Profil Ayarları İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Adınız</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
							<div class="form-group">
								<label for="Surname">Soyadınız</label>
								<input type="text" class="form-control" asp-for="Surname" id="Surname">
							</div>
							<div class="form-group">
								<label for="Mail">Mail Adresiniz</label>
								<input type="text" class="form-control" asp-for="Mail" id="Mail">
							</div>
							<div class="form-group">
								<label for="Password">Şifreniz</label>
								<input type="password" class="form-control" asp-for="Password" id="Password">
							</div>
							<div class="form-group">
								<label for="ConfirmPassword">Şifreyi Onaylayın</label>
								<input type="password" class="form-control" asp-for="ConfirmPassword" id="ConfirmPassword">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Profili Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>